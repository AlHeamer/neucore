{
    "name": "brv/neucore",
    "type": "project",
    "require": {
        "php-64bit": "^7.1.3",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo_mysql": "*",
        "ext-zend-opcache": "*",
        "doctrine/orm": "^2.6",
        "doctrine/migrations": "^1.6",
        "league/oauth2-client": "^2.2",
        "monolog/monolog": "^1.17",
        "ocramius/proxy-manager": "^2.1 <2.2.0",
        "php-di/slim-bridge": "^2.0",
        "slim/slim": "^3.1",
        "symfony/console": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/http-foundation": "^4.0",
        "symfony/yaml": "^4.0",
        "tkhamez/slim-role-auth": "0.3.0",
        "tkhamez/swagger-eve-php": "0.8.3.1",
        "zircote/swagger-php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "suggest": {
        "ext-apcu": "*",
        "ext-xdebug": "*"
    },
    "autoload": {
        "psr-4": {
        	"": "src/classes/",
        	"Tests\\": "src/tests/"
    	}
    },
    "repositories": [
        { "type": "git", "url": "https://github.com/tkhamez/slim-role-auth.git" },
        { "type": "git", "url": "https://github.com/tkhamez/swagger-eve-php.git" }
    ],
    "scripts": {
        "compile": [
            "doctrine-migrations migrations:migrate --no-interaction",
            "swagger --exclude bin,config,var,vendor --output ../web"
        ],
        "compile:prod": [
            "doctrine orm:generate-proxies",
            "doctrine-migrations migrations:migrate --no-interaction",
            "swagger --exclude bin,config,var,vendor --output ../web"
        ],
        "test": "phpunit",
        "test:cov": "phpunit --coverage-html var/phpunit",
        "run": "php -d max_execution_time=0 -S 0.0.0.0:8080 -t ../web ../web/app.php"
    },
    "config": {
        "platform": {
            "php": "7.1.3"
        }
    }
}
