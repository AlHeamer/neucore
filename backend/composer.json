{
    "name": "tkhamez/neucore",
    "type": "project",
    "license": "MIT",
    "require": {
        "php-64bit": "^7.1.3",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo_mysql": "*",
        "bravecollective/sso-basics": "^1.0.0",
        "doctrine/cache": "^1.8",
        "doctrine/orm": "^2.6",
        "doctrine/migrations": "^2.0",
        "guzzlehttp/guzzle": "^6.3",
        "kevinrob/guzzle-cache-middleware": "^3.2",
        "league/oauth2-client": "^2.2",
        "monolog/monolog": "^1.17",
        "php-di/slim-bridge": "^2.0",
        "slim/slim": "^3.1",
        "symfony/console": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/http-foundation": "^4.0",
        "symfony/yaml": "^4.0",
        "tkhamez/slim-role-auth": "^0.3.0",
        "tkhamez/swagger-eve-php": "~2.0.0",
        "zircote/swagger-php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "suggest": {
        "ext-apcu": "*",
        "ext-xdebug": "*",
        "ext-zend-opcache": "*"
    },
    "autoload": {
        "psr-4": {
        	"": "src/classes/",
        	"Tests\\": "src/tests/"
    	}
    },
    "repositories": [
        { "type": "git", "url": "https://github.com/bravecollective/sso-basics.git" }
    ],
    "scripts": {
        "compile": [
            "@cache:clear",
            "@migrate",
            "@openapi"
        ],
        "compile:prod": [
            "@cache:clear",
            "doctrine orm:generate-proxies",
            "@migrate",
            "@openapi"
        ],
        "migrate": "doctrine-migrations migrations:migrate --no-interaction",
        "openapi": [
            "swagger --exclude bin,config,var,vendor --output ../web",
            "swagger --exclude bin,config,var,vendor,src/classes/Brave/Core/Api/App --output ../web/frontend-api.json",
            "swagger --exclude bin,config,var,vendor,src/classes/Brave/Core/Api/User --output ../web/application-api.json"
        ],
        "cache:clear": "rm -rf var/cache/di; rm -rf var/cache/http; rm -rf var/cache/proxies",
        "test": "phpunit",
        "test:cov": "phpunit --coverage-html var/phpunit",
        "run": "php -d max_execution_time=0 -S 0.0.0.0:8080 -t ../web ../web/app.php"
    },
    "config": {
        "platform": {
            "php": "7.1.3"
        }
    }
}
