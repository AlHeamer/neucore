{
    "name": "tkhamez/neucore",
    "type": "project",
    "description": "",
    "license": "MIT",
    "require": {
        "php-64bit": "^7.4|^8.0",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo_mysql": "*",
        "doctrine/common": "^3.0",
        "doctrine/migrations": "^3.0",
        "doctrine/orm": "^2.6",
        "doctrine/persistence": "^2.0",
        "graylog2/gelf-php": "^1.6",
        "guzzlehttp/guzzle": "^7.2",
        "kevinrob/guzzle-cache-middleware": "^3.2",
        "league/oauth2-client": "^2.2",
        "monolog/monolog": "^2.0",
        "php-di/slim-bridge": "^3.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "slim/psr7": "^1.0",
        "slim/slim": "^4.4",
        "symfony/cache": "^5.3",
        "symfony/console": "^5.1",
        "symfony/dotenv": "^5.1",
        "symfony/http-foundation": "^5.1",
        "symfony/yaml": "^5.1",
        "tkhamez/eve-sso": "^3.0",
        "tkhamez/neucore-plugin": "^0.6.0",
        "tkhamez/slim-role-auth": "^3.0",
        "tkhamez/swagger-eve-php": "^7.1",
        "zircote/swagger-php": "~4.0.0"
    },
    "require-dev": {
        "drenso/phan-extensions": "~3.1.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phan/phan": "^5.2",
        "phpstan/phpstan": "^1.3",
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^4.0"
    },
    "suggest": {
        "ext-apcu": "*",
        "ext-ast": "*",
        "ext-gmp": "*",
        "ext-intl": "*",
        "ext-pdo_sqlite": "*",
        "ext-xdebug": "*",
        "ext-zend-opcache": "*"
    },
    "autoload": {
        "psr-4": {
        	"Neucore\\": "src/",
        	"Tests\\": "tests/"
    	},
        "files": ["config/version.php"]
    },
    "scripts": {
        "compile": [
            "bin/console clear-cache",
            "@db:migrate",
            "@db:seed",
            "@openapi"
        ],
        "compile:prod": [
            "bin/console clear-cache",
            "doctrine orm:generate-proxies",
            "@db:migrate",
            "@db:seed",
            "@openapi"
        ],
        "db:migrate": "doctrine-migrations migrations:migrate --no-interaction",
        "db:seed": "bin/console doctrine-fixtures-load",
        "openapi": [
            "openapi src --output ../web/openapi-3.yaml",
            "openapi src --output ../web/frontend-api-3.yml --exclude src/Controller/App",
            "openapi src --output ../web/application-api-3.yml --exclude src/Controller/User"
        ],
        "phan": "PHAN_DISABLE_XDEBUG_WARN=1 phan --color",
        "phpstan": "phpstan analyse --level 8 --ansi src tests",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test:cov": "phpunit --colors=always --coverage-html var/phpunit",
        "style:check": "php-cs-fixer fix src --dry-run --diff --ansi",
        "style:fix": "php-cs-fixer fix src --ansi",
        "start": "php -d max_execution_time=0 -S 0.0.0.0:8080 -t ../web ../web/app.php"
    },
    "config": {
        "platform": {
            "php": "7.4.0"
        },
        "process-timeout": 0,
        "sort-packages": true
    }
}
