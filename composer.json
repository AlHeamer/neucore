{
    "name": "brv/neucore",
    "type": "project",
    "require": {
        "php-64bit": ">=7.0.0 <7.2.0",
        "ext-apcu": "*",
        "slim/slim": "^3.1",
        "php-di/slim-bridge": "^1.1",
        "monolog/monolog": "^1.17",
        "symfony/console": "^4.0",
        "doctrine/orm": "^2.6",
        "doctrine/migrations": "^1.6",
        "guzzlehttp/guzzle": "^6.3",
        "zircote/swagger-php": "^2.0"
    },
    "autoload": {
        "psr-4": { "": "src/classes/" }
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "filp/whoops": "^2.1",
        "symfony/dotenv": "^4.0",
        "symfony/var-dumper": "^4.0",
        "heroku/heroku-buildpack-php": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "src/tests/"
        }
    },
    "scripts": {
       "post-install-cmd": [
            "npm install --prefix web"
        ],
        "compile": [
            "doctrine orm:generate-proxies",
            "doctrine-migrations migrations:migrate --no-interaction",
            "swagger --bootstrap config/swagger.php --exclude bin,config,docs,var,vendor,web --output web"
        ],
        "clean": "rm -R var/cache/*",
        "test": "phpunit",
        "run": "php -S 0.0.0.0:8080 -t web web/app.php"
    }
}
